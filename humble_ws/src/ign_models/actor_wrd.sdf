<sdf version="1.6">
  <world name="diff_drive">

    <physics name="1ms" type="ignored">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
    </physics>
    <plugin
      filename="ignition-gazebo-physics-system"
      name="ignition::gazebo::systems::Physics">
    </plugin>
    <plugin
      filename="ignition-gazebo-user-commands-system"
      name="ignition::gazebo::systems::UserCommands">
    </plugin>
    <plugin
      filename="ignition-gazebo-scene-broadcaster-system"
      name="ignition::gazebo::systems::SceneBroadcaster">
    </plugin>
    <plugin
      filename="libignition-gazebo-sensors-system.so"
      name="ignition::gazebo::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
    <light type="directional" name="sun">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>1 1 1 1</diffuse>
      <specular>0.5 0.5 0.5 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 0.1 -0.9</direction>
    </light>

    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.8 0.8 0.8 1</specular>
          </material>
        </visual>
      </link>
    </model>

      <model name='human_vehicle'>
      <pose>0 0 0.325 0 0 0</pose>

      <link name='base_footprint'>
        <pose>0 -0 0.1 0 -0 0</pose>
        <inertial>
          <mass>1.14395</mass>
          <inertia>
            <ixx>0.126164</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.416519</iyy>
            <iyz>0</iyz>
            <izz>0.481014</izz>
          </inertia>
        </inertial>
        <visual name='visual'>
          <geometry>
          <cylinder>
          <radius>0.55</radius>
          <length>0.250</length>
          </cylinder>
          </geometry>
          <material>
            <ambient>0.5 0.5 1.0 1</ambient>
            <diffuse>0.5 0.5 1.0 1</diffuse>
            <specular>0.0 0.0 1.0 1</specular>
          </material>
        </visual>
        <collision name='collision'>
          <geometry>
            <cylinder>
          <radius>0.55</radius>
          <length>0.150</length>
          </cylinder>
          </geometry>
        </collision>
      </link>

      <link name='left_wheel'>
        <pose>0.0 0.3 -0.075 -1.570707963267948966 0 0</pose>
        <inertial>
          <mass>2</mass>
          <inertia>
            <ixx>0.145833</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.145833</iyy>
            <iyz>0</iyz>
            <izz>0.125</izz>
          </inertia>
        </inertial>
        <visual name='visual'>
          <geometry>
            <sphere>
              <radius>0.15</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>0.5 0.5 1.0 1</ambient>
            <diffuse>0.5 0.5 1.0 1</diffuse>
            <specular>0.0 0.0 1.0 1</specular>
          </material>
        </visual>
        <collision name='collision'>
          <geometry>
            <sphere>
              <radius>0.15</radius>
            </sphere>
          </geometry>
        </collision>
      </link>

      <link name='right_wheel'>
        <pose>0.0 -0.3 -0.075 -1.570707963267948966 0 0</pose>
        <inertial>
          <mass>2</mass>
          <inertia>
            <ixx>0.145833</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.145833</iyy>
            <iyz>0</iyz>
            <izz>0.125</izz>
          </inertia>
        </inertial>
        <visual name='visual'>
          <geometry>
            <sphere>
              <radius>0.15</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>0.5 0.5 1.0 1</ambient>
            <diffuse>0.5 0.5 1.0 1</diffuse>
            <specular>0.0 0.0 1.0 1</specular>
          </material>
          </visual>
        <collision name='collision'>
          <geometry>
            <sphere>
              <radius>0.15</radius>
            </sphere>
          </geometry>
        </collision>
      </link>

      <link name='caster'>
        <pose>-0.357138 -0 -0.075 0 -0 0</pose>
        <inertial>
          <mass>1</mass>
          <inertia>
            <ixx>0.1</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.1</iyy>
            <iyz>0</iyz>
            <izz>0.1</izz>
          </inertia>
        </inertial>
        <visual name='visual'>
          <geometry>
            <sphere>
              <radius>0.145</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>0.5 0.5 1.0 1</ambient>
            <diffuse>0.5 0.5 1.0 1</diffuse>
            <specular>0.0 0.0 1.0 1</specular>
          </material>
          </visual>
        <collision name='collision'>
          <geometry>
            <sphere>
              <radius>0.145</radius>
            </sphere>
          </geometry>
        </collision>
      </link>
      
      <link name='caster_front'>
        <pose>0.357138 -0 -0.075 0 -0 0</pose>
        <inertial>
          <mass>1</mass>
          <inertia>
            <ixx>0.1</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.1</iyy>
            <iyz>0</iyz>
            <izz>0.1</izz>
          </inertia>
        </inertial>
        <visual name='visual'>
          <geometry>
            <sphere>
              <radius>0.145</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>0.5 0.5 1.0 1</ambient>
            <diffuse>0.5 0.5 1.0 1</diffuse>
            <specular>0.0 0.0 1.0 1</specular>
          </material>
          </visual>
        <collision name='collision'>
          <geometry>
            <sphere>
              <radius>0.145</radius>
            </sphere>
          </geometry>
        </collision>
      </link>
      
      <joint name='front_laser_joint' type='fixed'>
          <!--pose relative_to='base_footprint'>0.000 -0.0 0.25083 3.1415926535897932 0.000 0.000</pose-->
          <pose relative_to='base_footprint'>0.000 -0.0 0.0 3.1415926535897932 0.000 0.000</pose>
      	  <parent>base_footprint</parent>
     	  <child>front_laser_link</child>
      </joint>
    
      <link name="front_laser_link">
      <pose relative_to='front_laser_joint'>0 0 0 0 0 0</pose>
        <sensor name='human_vehicle_front_laser_sensor' type='gpu_lidar'>
        <ignition_frame_id>human_vehicle/front_laser_link</ignition_frame_id> 
        <topic>/human_vehicle/front_laser</topic>
        <update_rate>20</update_rate>
        <lidar>
            <scan>
                <horizontal>
                    <samples>541</samples>
                    <resolution>1</resolution>
                    <min_angle>-3.1415926535897932</min_angle>
                    <max_angle>3.1415926535897932</max_angle>
                </horizontal>
            </scan>
            <range>
                <min>0.56</min>
                <max>15.0</max>
                <resolution>0.03</resolution>
            </range>
            <!--noise>
                <type>gaussian</type>
                <mean>0.0</mean>
                <stddev>0.03</stddev>
            </noise-->
        </lidar>
        <always_on>1</always_on>
        <visualize>true</visualize>
      </sensor>  
      
      <visual name='visual'>
          <geometry>
            <sphere>
              <radius>0.05</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>0.5 0.5 1.0 1</ambient>
            <diffuse>0.5 0.5 1.0 1</diffuse>
            <specular>0.0 0.0 1.0 1</specular>
          </material>
          </visual>
      
      </link>    

      <joint name='left_wheel_joint' type='revolute'>
        <parent>base_footprint</parent>
        <child>left_wheel</child>
        <axis>
          <xyz>0 0 1</xyz>
          <limit>
            <lower>-1.79769e+308</lower>
            <upper>1.79769e+308</upper>
          </limit>
        </axis>
      </joint>

      <joint name='right_wheel_joint' type='revolute'>
        <parent>base_footprint</parent>
        <child>right_wheel</child>
        <axis>
          <xyz>0 0 1</xyz>
          <limit>
            <lower>-1.79769e+308</lower>
            <upper>1.79769e+308</upper>
          </limit>
        </axis>
      </joint>

      <joint name='caster_wheel' type='ball'>
        <parent>base_footprint</parent>
        <child>caster</child>
      </joint>
      
      <joint name='caster_wheel_front' type='ball'>
        <parent>base_footprint</parent>
        <child>caster_front</child>
      </joint>

      <plugin
        filename="ignition-gazebo-diff-drive-system"
        name="ignition::gazebo::systems::DiffDrive">
        <left_joint>left_wheel_joint</left_joint>
        <right_joint>right_wheel_joint</right_joint>
        <wheel_separation>0.6</wheel_separation>
        <wheel_radius>0.15</wheel_radius>
        <odom_publish_frequency>20</odom_publish_frequency>
        <max_linear_acceleration>2.5</max_linear_acceleration>
        <min_linear_acceleration>-2.5</min_linear_acceleration>
        <max_angular_acceleration>3.2</max_angular_acceleration>
        <min_angular_acceleration>-3.2</min_angular_acceleration>
        <max_linear_velocity>0.5</max_linear_velocity>
        <min_linear_velocity>-0.5</min_linear_velocity>
        <max_angular_velocity>1</max_angular_velocity>
        <min_angular_velocity>-1</min_angular_velocity>
        <topic>human_vehicle/cmd_vel</topic>
      	<odom_topic>human_vehicle/odom</odom_topic>
      	<tf_topic>human_vehicle/tf</tf_topic>
      	<frame_id>human_vehicle/odom</frame_id>
        <child_frame_id>human_vehicle/base_footprint</child_frame_id>
      </plugin>
    </model>
    
    

        <include>
        <name>actor_name</name>
        <pose>0 0 1.0 0 0 0</pose>
        <uri>https://fuel.ignitionrobotics.org/1.0/chapulina/models/Walking actor</uri>
    	<plugin filename="ignition-gazebo-follow-actor-system"
              name="ignition::gazebo::systems::FollowActor">
        <target>human_vehicle</target>
        <min_distance>0.1</min_distance>
        <max_distance>15.0</max_distance>
        <velocity>1</velocity>
        <animation_x_vel>1.5</animation_x_vel>
      	</plugin>
        </include>
  </world>
</sdf>
 
