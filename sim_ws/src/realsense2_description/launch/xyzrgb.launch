<launch>
  <node pkg="nodelet" type="nodelet" name="nodelet_manager" args="manager" />


  <node pkg="nodelet" type="nodelet" name="nodelet1"
        args="load image_proc/rectify nodelet_manager">
    <remap from="camera_info" to="/camera/color/camera_info"/>
    <remap from="image_mono" to="/camera/color/image_raw"/>
    <remap from="image_rect" to="/camera/color/image_rect_color"/>
  </node>

  <node pkg="nodelet" type="nodelet" name="nodelet2"
        args="load image_proc/rectify nodelet_manager">
    <remap from="camera_info" to="/camera/depth/camera_info"/>
    <remap from="image_mono" to="/camera/depth/image_raw"/>
    <remap from="image_rect" to="/camera/depth/image_rect"/>
  </node>

  <node pkg="nodelet" type="nodelet" name="nodelet3"
        args="load depth_image_proc/register nodelet_manager">
    <remap from="rgb/camera_info" to="/camera/color/camera_info"/>
    <remap from="depth/camera_info" to="/camera/depth/camera_info"/>
    <remap from="depth/image_rect" to="/camera/depth/image_rect"/>
    <remap from="depth_registered/camera_info" to="/camera/depth_registered/camera_info"/>
    <remap from="depth_registered/image_rect" to="/camera/depth_registered/image_rect"/>
  </node>

  <node pkg="nodelet" type="nodelet" name="nodelet4"
        args="load depth_image_proc/point_cloud_xyzrgb nodelet_manager">
    <remap from="rgb/camera_info" to="/camera/color/camera_info"/>
    <remap from="rgb/image_rect_color" to="/camera/color/image_rect_color"/>
    <remap from="depth_registered/image_rect" to="/camera/depth_registered/image_rect"/>
    <remap from="depth_registered/points" to="/camera/depth_registered/points"/>
  </node>
</launch>
